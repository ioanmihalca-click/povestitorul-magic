<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirect from http:// and https://www to https://povestitorulmagic.ro (non-www)
    RewriteCond %{HTTP_HOST} ^(www\.)?povestitorulmagic\.ro [NC,OR]
    RewriteCond %{HTTP_HOST} ^povestitorulmagic\.ro [NC]
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://povestitorulmagic.ro/$1 [L,R=301]

    RewriteCond %{HTTP_HOST} ^www\.povestitorulmagic\.ro [NC]
    RewriteRule ^(.*)$ https://povestitorulmagic.ro/$1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
